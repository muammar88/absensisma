<%- include('../../admin_component/header') %>
<body class="hold-transition login-page" style="background-color: white; justify-content: flex-start;">
    
    <div class="login-box" >
         <div class="card" style="box-shadow: 0 0 1px rgb(255 255 255 / 13%), 0 1px 3px rgb(255 255 255 / 20%) !important;">
              <div class="row p-4">
                <div class="col-2">
                    <a onClick="goToMenu('daftarDinasLuar')"> <img src="/static/img/asset/left-arrow.png" alt="Outlet Pulsa" class="brand-image img-circle mx-auto" style="opacity: .8;width: 20px;height: 20px;max-height: 70px;"></a>
                </div>
                <div class="col-8 text-center">
                    <span style="font-size: 15px;font-weight: bold;color: #454545;">Ajukan Dinas Luar</span>
                </div>
                <div class="col-2 ext-right">
                </div>

               <div class="col-12 text-center">
                    <div class="row mt-5">
                        <form enctype="multipart/form-data" method="post" onsubmit="addDinasLuarToServer(event)" id="form">
                            <div class="input-group mb-3 ">
                                <input   type="text" onfocus="(this.type='date')" class="form-control" placeholder="Mulai Dinas Luar" name="start_date">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-calendar-alt"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="input-group mb-3">
                                <input type="text" onfocus="(this.type='date')" class="form-control" placeholder="Akhir Dinas Luar" name="end_date">
                                <div class="input-group-append">
                                    <div class="input-group-text">
                                        <span class="fas fa-calendar-alt"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mt-4">
                                <label for="exampleInputFile" class="float-left">Upload SK Dinas Luar</label>
                                <input type="file" id="exampleInputFile" name="sk" class="w-100 rounded-right" style="background-color: #3498db38;">
                                <p class="help-block">Silakan upload SK dinas luar anda disini.</p>
                            </div>
                            <div class="row mt-5">
                                <div class="col-12">
                                    <button type="submit" class="btn btn-primary btn-block">Ajukan Dinas Luar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <script>var nip = '<%= nip %>'; </script>
    <%- include('../../admin_component/footer') %>
  
</body>